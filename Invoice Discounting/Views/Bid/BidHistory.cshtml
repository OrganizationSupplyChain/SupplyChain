@model IEnumerable<BidViewModel>
@{
    ViewData["Title"] = "Loan Bid";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-12 d-flex justify-content-between">
            <h3 class="page-title">Loan Bid History</h3>
            <p>@DateTime.UtcNow.ToShortDateString()</p>

        </div>
    </div>

    <div class="row my-5">
        <div class="col-12">
            <div class="card my-card">
                <div class="card-body px-0">
                    <div class="header px-4 pb-3 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Loan List</h5>

                    </div>

                    <div class="notif-wrapper p-4 notif-card " style="height: 55vh;">
                        <table id="loanTable" class="table" style="width:100%">
                            <thead style="text-align:left">
                                <tr>
                                    <th>S/N</th>
                                    <th>Invoice Number</th>
                                    <th>Vendor Name</th>
                                    <th>Project Name</th>
                                    <th>Project Amount</th>
                                    <th>Loan Amount</th>
                                    <th>Requested Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int j = 1;
                                }
                                @if (Model == null || Model.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="7">No Record Found</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <label> @j </label>
                                                @{
                                                    j++;
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.invoicenumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VendorName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ProjectName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.totalamount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.requestedamount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.daterequested)
                                            </td>
                                            <td>
                                                @if (item.BidStatus == "Bid Rejected")
                                                {
                                                    <div class="status alert alert-danger mb-0 py-1" role="alert">
                                                        <label style="width:90px">Bid Rejected</label>
                                                    </div>
                                                }
                                                else if (item.BidStatus == "Bid Accepted")
                                                {
                                                    <div class="status alert alert-info mb-0 py-1" role="alert">
                                                        <label style="width:90px">Bid Accepted</label>
                                                    </div>
                                                }
                                                else if (item.BidStatus == "Bid Ongoing")
                                                {
                                                    <div class="status alert alert-warning mb-0 py-1" role="alert">
                                                        <label style="width:90px">Bid Ongoing</label>
                                                    </div>
                                                }                                               
                                            </td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModal"></div>

@section Scripts
    {
    <script>

        $(document).ready(function () {
            var vendorTable = $('#loanTable').DataTable({
                dom: 'lrtip',
                order: [],
                paging: true,
                info: true,
                buttons: [
                    {
                        extend: 'excel',
                        className: 'excel',
                        text: '<i class="fas fa-file-excel"></i>',
                        footer: true,
                        titleAttr: 'Excel'
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="fas fa-file-pdf"></i>',
                        titleAttr: 'PDF'
                    }
                ]
            });
        });

      
    </script>
}


