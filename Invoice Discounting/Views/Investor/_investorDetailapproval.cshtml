@model InvestorDetailsPending

<form asp-controller="Investor" asp-action="_Authorize" method="post" autocomplete="off">


    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
    @functions{
        public string GetAntiXsrfRequestToken()
        {
            return Xsrf.GetAndStoreTokens(Context).RequestToken;
        }
    }
    <div class="modal right fade show my-modal" id="right_modal" tabindex="-1" role="dialog" aria-labelledby="right_modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header px-5">
                    <h5 class="modal-title">@Model.CompanyName</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <img src="~/assets/images/close-icon.png" />
                    </button>
                </div>
                <div class="modal-body py-3 px-5">
                    <div class="contract-item">
                        <h4>
                            Company Name:
                        </h4>
                        @Html.HiddenFor(model => model.ID)
                        @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="contract-item">
                        <h4>
                            Phone Number:
                        </h4>
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                    </div>
                    <div class="contract-item">
                        <h4>
                            Email Address:
                        </h4>
                        <p>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </p>
                    </div>

                    <div class="contract-item">
                        <h4>
                            Account Number:
                        </h4>
                        @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="contract-item">
                        <h4>
                            Location:
                        </h4>
                        @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>

                    <div class="contract-item">
                        <h4>
                            Bank Name
                        </h4>
                        @Html.EditorFor(model => model.BANK, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="contract-item">
                        <h4>
                            Funding Capacity
                        </h4>
                        @Html.EditorFor(model => model.FundingCapacity, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>

                    <div class="contract-item">
                        <h4>
                            Investment Preference:
                        </h4>
                        @Html.EditorFor(model => model.InvestmentPreferences, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>

                    <div class="contract-item">
                        <h4>
                            Investment Restriction:
                        </h4>
                        @Html.EditorFor(model => model.InvestmentRestrictions, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                    <div class="contract-item">
                        <h4>
                            Interest Rate:
                        </h4>
                        @Html.EditorFor(model => model.InterestRate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>

                    <div class="contract-item">
                        <h4>
                            Unique Number:
                        </h4>
                        @Html.EditorFor(model => model.UNIQUEINVESTORID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>

                 
                    <div class="contract-item">
                        <h4>
                          Investment Experience In Years
                        </h4>
                        @Html.EditorFor(model => model.InvestmentExperienceInYears, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>

                    <div class="contract-item">
                        <h4>
                            Date Created:
                        </h4>
                        @Html.EditorFor(model => model.DATECREATED, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>

                    <div class="contract-item">
                        <h4>
                            Action:
                        </h4>
                        @Html.DropDownListFor(model => model.AUTHORIZATIONSTATUS, new List<SelectListItem> {
                            new SelectListItem{ Text="--Select--", Value="" },
                            new SelectListItem{ Text="Approve", Value="1" },
                            new SelectListItem{ Text="Reject", Value="2"}
                        }, new { @class = "form-control", @id = "stat" })
                    </div>



                    <div class="contract-item">
                        <h4>
                            Comment:
                        </h4>
                        @Html.TextAreaFor(model => model.AUTHORIZERCOMMENT, new { @class = "form-control", @id = "comment" })
                    </div>

                    <div class="modal-footer">

                        <button type="submit" class="btn btn-primary">Authorize</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>
        $.ajaxPrefilter(function (options, originalOptions, jqXHR) {
                jqXHR.setRequestHeader("__RequestVerificationToken", '@GetAntiXsrfRequestToken()');
	    });
    </script>
</form>
  
