<body class="bg-gradient-primary">
	@*@using (Html.BeginForm("Index", "Login", FormMethod.Post))
	{
		@Html.AntiForgeryToken()*@
	<form asp-action="Index" asp-controller="Login" method="post" autocomplete="off">

		<div class="container">
			<!-- Outer Row -->
			<div class="row justify-content-center">
				<div class="col-xl-10 col-lg-12 col-md-9">
					<div class="card o-hidden border-0 shadow-lg my-5">
						<div class="card-body p-0">
							<!-- Nested Row within Card Body -->
							<div class="row">
								<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
								<div class="col-lg-6">
									<div class="p-5">
										<div class="text-center">
											<h1 class="h4 text-gray-900 mb-4" style="font-family:Calibri">Invoice Discounting Portal</h1>
										</div>

										@*<form class="user">*@
										<div style="text-align: center;	margin: 24px 0 12px 40px;">
											@*<img src="~/images/signup-logo-.svg" alt="">*@
										</div>
										<div class="tb-height-b25 tb-height-lg-b25"></div>
										<div class="tb-height-b15 tb-height-lg-b15"></div>
										<div class="container">
											<div class="form-group">
												<div class="tb-form-field lgin">
													@*<label>Username</label>*@
													@Html.EditorFor(model => model.UserName, new
											   {
												   htmlAttributes = new { @class = "form-control", @placeholder = "UserName" }
											   })
													<span asp-validation-for="UserName" class="text-danger"></span>

												</div>
												<div class="tb-height-b15 tb-height-lg-b15"></div>
											</div>
											<div class="form-group">
												<div class="tb-form-field lgin">
													@*<label>Password</label>*@
													@Html.EditorFor(model => model.Password, new
											   {
												   htmlAttributes = new { @class = "form-control", @placeholder = "Password", @type="password" }
											   })
													<span asp-validation-for="Password" class="text-danger"></span>

												</div>
											</div>
											
											<div class="col-lg-12">
												<div class="tb-form-field lgin">
													<label id="msg" style="color:red; font-weight:500">@Model.ErrorMsg</label>
												</div>
											</div>
											<div class="col-lg-12">
												<div class="tb-height-b5 tb-height-lg-b5"></div>

												<div class="tb-height-b20 tb-height-lg-b20"></div>
												<input type="submit" name="Sign In" class="btn btn-user btn-block" style="background-color:#fe7005;color:white" value="Login">
											</div>
										</div>

										@*</form>*@
										<hr>
										<div class="text-center">
											<a class="small" href="#">Forgot Password?</a>
										</div>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
	@*}*@
