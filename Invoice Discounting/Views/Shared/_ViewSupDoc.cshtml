@model ImageModel

	<div id="view-issue" class="modal fade view-issue" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title" id="myLargeModalLabel">@Model.Header</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="tb-card-body">
						<div class="tb-padd-lr-30 tb-alert-wrap">
							<div class="tb-height-b25 tb-height-lg-b25"></div>
							<form>
								<div style="text-align:center">

									@if (Model.Extension == "pdf")
									{
										<iframe src="@String.Format("data:application/{0};base64,{1}",Model.Extension, Model.Image)" height="400" width="750" />
									}
									else
									{
										<iframe src="@String.Format("data:image/{0};base64,{1}",Model.Extension, Model.Image)" height="400" width="750" />
									}
								</div>
							</form>
							<div class="tb-height-b15 tb-height-lg-b15"></div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>

