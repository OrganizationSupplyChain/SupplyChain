@model Roles

@Html.AntiForgeryToken()
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">View Role Details</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="tb-card-body">
                    <div class="tb-padd-lr-30 tb-alert-wrap">
                        <div class="tb-height-b25 tb-height-lg-b25"></div>
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-8">
                                    <label for="inputEmail4">Role Name</label>
                                    @Html.EditorFor(model => model.ROLENAME, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputEmail4">Created By</label>
                                    @Html.EditorFor(model => model.CREATORNAME, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-8">
                                    <label for="inputEmail4">Module Access</label>
                                    @Html.EditorFor(model => model.MODULES, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>

                                <div class="form-group col-md-4">
                                    <label for="inputEmail4">Role Status</label>
                                    @if (Model.STATUS == '1')
                                    {
                                        @Html.Editor("ACTIVE", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } });
                                    }
                                    else
                                    {
                                        @Html.Editor("DISABLED", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } });
                                    }
                                    
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Created On</label>
                                    @Html.EditorFor(model => model.CREATEDDATE, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>

                            
                        </form>
                        <div class="tb-height-b15 tb-height-lg-b15"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>





