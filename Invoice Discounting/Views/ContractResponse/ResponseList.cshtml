@model IEnumerable<ContractResponse>
@{
    ViewData["Title"] = "Contract Responses";
}


<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-md-6">
            <h1 class="h3 mb-2 text-gray-800">Vendor Contract Response</h1>
        </div>

    </div>
    <p><label style="color:red">@Html.TempData["contractRespMsg"]</label></p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Response List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" id="dataTable" width="100%" style="font-family:Calibri;font-size:14px" cellspacing="0">
                    <thead>
                        <tr style="background-color:lightgrey; color:black">
                            <th>Vendor Name</th>
                            <th>Vendor Email</th>
                            <th>Comment</th>
                            <th>ResponseStatus</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VENDORNAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VENDOREMAIL)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VENDORCOMMENT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RESPONSESTATUS)
                                </td>
                                <td>
                                    @Html.ActionLink("View Details", "GetVendorResponseById", new { responseId = item.ID })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
