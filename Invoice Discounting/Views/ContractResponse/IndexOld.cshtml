@model IList<ContractResponseViewModel>
    @{
        ViewData["Title"] = "Vendor Contract";
    }

    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-md-6">
                <h1 class="h3 mb-2 text-gray-800">Vendor Invitation To Tender</h1>
            </div>

        </div>
        <p><label style="color:red">@Html.TempData["contractRespMsg"]</label></p>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Contract List</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered" id="dataTable" width="100%" style="font-family:Calibri;font-size:14px" cellspacing="0">
                        <thead>
                            <tr style="background-color:lightgrey; color:black">
                                <th>Contract Number</th>
                                <th>PO Number</th>
                                <th>Contract Name</th>
                                <th>Timeline(Days)</th>
                                <th>Payment Tenor(Days)</th>
                                <th>Vendor Category</th>
                                <th>Created By</th>
                                <th>Response Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContractDetails.CONTRACTNUMBER)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContractDetails.PONUMBER)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContractDetails.CONTRACTNAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContractDetails.TIMELINEDAYS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContractDetails.PAYMENTTENOR)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContractDetails.VENDORCATEGORY)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContractDetails.CREATEDBYNAME)
                                    </td>
                                    <td>
                                        @if (item.ContractResponse == null)
                                        {
                                            @Html.Label("No Response")
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.ContractResponse.RESPONSESTATUS)
                                        }
                                    </td>
                                    <td>
                                        @if (item.ContractResponse == null)
                                        {
                                            @Html.ActionLink("Respond", "ContractResponse", new { contractId = item.ContractDetails.ID }, new { @class = "respond" })
                                        }
                                        else
                                        {
                                            @Html.ActionLink("View Response", "GetVendorResponseById", new { responseId = item.ContractResponse.ID }, new { @class = "respond" })
                                        }
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
